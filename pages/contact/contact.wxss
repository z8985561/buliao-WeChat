/* pages/contact/contact.wxss */
.contact-swiper{
  height: 100vh;
  width: 100vw;
}
.contact-swiper .item{
  height: 100%;
  width: 100%;
}
.contact-swiper .item > view{
  position: relative;
  width: 100%;
  height: 100%;
  background-size: cover;
}
.business{
  position: absolute;
  left: 37rpx;
  right: 37rpx;
  bottom: 155rpx;
  height: auto;
  background-color: rgba(255,255,255,.9);
  border-radius:10rpx;
}
.info{
  display: flex;
  padding: 60rpx 46rpx 0;
}
.info image{
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  width: 118rpx;
  height: 118rpx;
  border-radius: 50%;
}
.content{
  margin-bottom: 60rpx;
  padding: 0 46rpx;
  line-height:36rpx;
}
.menu{
  margin-bottom: 55rpx;
  display: flex;
  justify-content: space-around;
  padding: 0 46rpx;
}
.menu image{
  width: 48rpx;
  height: 48rpx;
}