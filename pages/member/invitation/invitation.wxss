/* pages/member/invitation/invitation.wxss */
.fui-header{
  background-color: #fff;
}
.nav-list{
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 100%;
}
.nav-list view{
  height:84rpx;
  line-height: 84rpx;
  border-bottom: 4rpx solid transparent;
  color: #999;
  font-size: 28rpx;
}
.nav-list .active{
  color: #333;
  border-color: #E4454E
}
.invite-user{
  border-bottom: 1px solid #eee;
}
.invite-user image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.kongkong{
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translate(-50%,-50%);
  text-align: center;
}
.kongkong image{
  width: 250rpx;
  height: 250rpx;
}